<% if(success_msg != ''){ %>
<div class="alert alert-success alert-dismissible fade show" style="width: 100%;margin-left: 0%;margin-bottom: 0%;"
  role="alert">
  <h5 class="text-center font-weight-bold"><i class="far fa-check-circle font-weight-bold"></i><%= success_msg %><i
      class="far fa-check-circle font-weight-bold"></i></h5>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %> <% if(error_msg != ''){ %>
<div class="alert alert-danger alert-dismissible fade show " style="width: 100%;margin-left: 0%;margin-bottom: 0%;"
  role="alert">
  <h4 class="text-center font-weight-bold"><i class="far fa-times-circle font-weight-bold"></i>    <%= error_msg %>   <i
      class="far fa-times-circle font-weight-bold"></i></h4>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %> <% if(error != ''){ %>
<div class="alert alert-danger alert-dismissible fade show" style="width: 70%;margin-left: 0%;margin-bottom: 0%;"
  role="alert">
  <h5 class="text-center font-weight-bold"><i class="far fa-times-circle  font-weight-bold"></i> <%= error %> <i
      class="far fa-times-circle font-weight-bold"></i></h5>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %>