  <!-- Modal for Class Information and details -->

  <div class="modal fade" id="classInfo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content table-dark">
        <div class="modal-header gradient-color-65 table-dark">
          <h5 class="modal-title" id="exampleModalLabel">Search for class details</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:white;">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body gradient-color table-dark">
          <form action="classInfo" method="POST">
            <div class="form-row">
              <select class="form-control input select" name="Class" style="border-bottom: 1px solid white;" required>
                <option value="Play" class="option">Play</option>
                <option value="Nursery" class="option">Nursery</option>
                <option value="1" class="option">1</option>
                <option value="2" class="option">2</option>
                <option value="3" class="option">3</option>
                <option value="4" class="option">4</option>
                <option value="5" class="option">5</option>
                <option value="6" class="option">6</option>
                <option value="7" class="option">7</option>
                <option value="8" class="option">8</option>
                <option value="9" class="option">9</option>
                <option value="10" class="option">10</option>
                <option value="Intermediate first year" class="option">Intermediate First Year</option>
                <option value="Intermediate second year" class="option">Intermediate Second Year</option>
              </select>
            </div>
            <div class="form-row">
              <select name="section" style="border-bottom: 1px solid white;" class="input form-control select"
                name="section" id="">
                <option value="N/A" class="option">N/A</option>
                <option value="A" class="option">A</option>
                <option value="B" class="option">B</option>
                <option value="C" class="option">C</option>
              </select>
            </div>
            <div class="form-row">
              <select name="session" style="border-bottom: 0px solid white;" class="form-control input select" required>
                <option value="2020" class="option">2020</option>
                <option value="2021" class="option">2021</option>
                <option value="2022" class="option">2022</option>
                <option value="2023" class="option">2023</option>
                <option value="2024" class="option">2024</option>
                <option value="2025" class="option">2025</option>
                <option value="2026" class="option">2026</option>
                <option value="2027" class="option">2027</option>
                <option value="2028" class="option">2028</option>
                <option value="2029" class="option">2029</option>
                <option value="2030" class="option">2030</option>
              </select>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-info">Check</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- model for Student's Inquiry -->

  <div class="modal fade " id="inputResults" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header gradient-color-65 table-dark">
          <h5 class="modal-title" id="exampleModalLabel">Search for Student's Details here</h5>
          <button type="button" class="close" data-dismiss="modal" style="color: white;" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body gradient-color table-dark">
          <form>
            <div class="form-row">
              <input type="number" name="id" class="form-control input" style="border-bottom: 1px solid white;"
                placeholder="Student ID" required>
            </div>
            <div class="modal-footer">
              <button type="submit" formaction="info" formmethod="POST" class="btn btn-info font-family-pridi "> Check Information </button>
              <button type="submit" formaction="resultEntry" formmethod="POST" class="btn btn-primary font-family-pridi"> Entry Results </button>
              <button type="submit" formaction="result" formmethod="POST" class="btn btn-danger font-family-pridi"> Check Results </button>
              
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>